# OpenAI API Key (required for generation)
OPENAI_API_KEY=your_openai_api_key_here

# HuggingFace Token (optional, for private models)
HF_TOKEN=your_huggingface_token_here

# ChromaDB settings
CHROMA_PERSIST_DIRECTORY=./data/processed/chroma_db
CHROMA_COLLECTION_NAME=itba_ejercicios_collection

# Model settings
# Opciones para EMBEDDING_MODEL:
# - "openai" (usa text-embedding-3-small por defecto, requiere OPENAI_API_KEY)
# - "text-embedding-3-small" (OpenAI, económico, 1536 dims)
# - "text-embedding-3-large" (OpenAI, mejor calidad, 3072 dims)
# - "all-MiniLM-L6-v2" (local, requiere sentence-transformers y PyTorch)
# - "all-mpnet-base-v2" (local, mejor calidad, más lento)
EMBEDDING_MODEL=openai

# Modelo específico de OpenAI para embeddings (solo si EMBEDDING_MODEL=openai)
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Modelo de generación
LLM_MODEL=gpt-4o-mini

# OpenAI capacity mode (flex, standard, priority)
OPENAI_MODE=flex

# Text processing settings
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
