# OpenAI API Key (required for generation)
OPENAI_API_KEY=your_openai_api_key_here

# ChromaDB settings
CHROMA_PERSIST_DIRECTORY=./data/processed/chroma_db
CHROMA_COLLECTION_NAME=itba_ejercicios_collection

# Model settings
# Embedding models - choose one:
# OpenAI models (requiere OPENAI_API_KEY):
EMBEDDING_MODEL=openai
# OPENAI_EMBEDDING_MODEL=text-embedding-3-small    # Más rápido, menor costo
# OPENAI_EMBEDDING_MODEL=text-embedding-3-large    # Mejor calidad, mayor costo
# OPENAI_EMBEDDING_MODEL=text-embedding-ada-002    # Modelo anterior

# Sentence-Transformers models (locales, gratuitos):
# EMBEDDING_MODEL=all-MiniLM-L6-v2                 # Rápido, 384 dims (recomendado)
# EMBEDDING_MODEL=all-mpnet-base-v2                # Mejor calidad, 768 dims
# EMBEDDING_MODEL=multi-qa-MiniLM-L6-cos-v1        # Optimizado para Q&A
# EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
# EMBEDDING_MODEL=sentence-transformers/all-mpnet-base-v2
# EMBEDDING_MODEL=sentence-transformers/multi-qa-MiniLM-L6-cos-v1

# LLM models:
LLM_MODEL=gpt-4o-mini
# LLM_MODEL=gpt-4o                                # Mejor calidad, mayor costo
# LLM_MODEL=gpt-3.5-turbo                         # Más económico

# Text processing settings
CHUNK_SIZE=2000
CHUNK_OVERLAP=200

# Additional embedding options:
# EMBEDDING_MODEL=paraphrase-multilingual-MiniLM-L12-v2  # Multilingüe
# EMBEDDING_MODEL=distilbert-base-nli-mean-tokens         # DistilBERT
# EMBEDDING_MODEL=msmarco-distilbert-base-tas-b           # Optimizado para búsqueda
# EMBEDDING_MODEL=all-distilroberta-v1                    # RoBERTa distilado
# EMBEDDING_MODEL=stsb-roberta-large                      # Para similitud semántica
# EMBEDDING_MODEL=nli-roberta-base-v2                     # Para inferencia de lenguaje natural

# HuggingFace Token (opcional, para modelos privados)
# HF_TOKEN=your_huggingface_token_here

# Advanced settings:
# EMBEDDING_BATCH_SIZE=32                                 # Tamaño de lote para embeddings
# EMBEDDING_MAX_RETRIES=3                                 # Reintentos para embeddings
# EMBEDDING_TIMEOUT=30                                    # Timeout en segundos
